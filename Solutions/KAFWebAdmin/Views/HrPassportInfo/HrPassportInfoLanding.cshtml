@model KAF.BusinessDataObjects.hr_passportinfoEntity

@{
    ViewBag.Title = KAF.MsgContainer._hr_passportinfo.passportinfoList;
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
    PageData["baseUrl"] = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/');
    string s = ViewBag.Role;
}
<style>
    .basicDetails {
        margin-left: 15px;
        margin-right: 15px;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                @{
                    //KAF.CustomHelper.HelperClasses.clsSecurityPanel objSecPanel = new KAF.CustomHelper.HelperClasses.clsSecurityPanel();

                    @*if (objSecPanel.checkButtonPermission("HrPassportInfo/HrPassportInfoNew"))
                        {
                            <button type="submit" class="btn btn-primary btn-md" id="btnNewHrPassportInfo">
                                <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> @KAF.MsgContainer._CommonHtml.add
                            </button>
                        }*@
                }
            </div>
            <div class="panel panel-info">
                <div class="panel-heading">
                    Basic Details
                </div>
                <div class="panel-body">



                    @{
                        if (!string.IsNullOrEmpty(s) && s.Contains("Officers"))
                        {
                            <div class="row ">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.Label("Military No (KW)", htmlAttributes: new { @class = "labelNormal  " })
                                        <input class="militarynokwT searchtext form-control text-box single-line" readonly data-val="true" data-val-number="The field militarynokw must be a number." id="militarynokw" name="militarynokw" type="number" value="@ViewBag.militaryid">
                                    </div>
                                </div>
                            </div>

                            <div class="row ">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="btn-toolbar align-center">
                                            <button type="submit" id="btnLandingSearch" class="btn btn-primary btn-md btnLandingSearch">
                                                <i class="fa fa-search"> </i>
                                                @KAF.MsgContainer._Common._btnSearch
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="row ">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.Label("Military No (KW)", htmlAttributes: new { @class = "labelNormal  required" })
                                        @Html.EditorFor(model => model.militarynokw, new { htmlAttributes = new { @class = "required form-control" } })
                                        @Html.ValidationMessageFor(model => model.militarynokw, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row ">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="btn-toolbar align-center">
                                            <button type="submit" id="btnLandingSearch" class="btn btn-primary btn-md btnLandingSearch">
                                                <i class="fa fa-search"> </i>
                                                @KAF.MsgContainer._Common._btnSearch
                                            </button>

                                            <button type="submit" id="btnClearLandingSearch" class="btn btn-danger btn-md btnClearLandingSearch">
                                                <i class="fa fa-close"> </i> Clear
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }


                </div>
                <hr />
                <div class="basicDetails">
                    @Html.HiddenFor(model => model.hrbasicid)
                    @*@Html.EditorFor(model => model.hrbasicid, new { htmlAttributes = new { @class = "hidden form-control" } })*@
                    <div class="row ">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.Label("Military No (BD)", htmlAttributes: new { @class = "labelNormal  " })
                                @Html.EditorFor(model => model.militarynobd, new { htmlAttributes = new { @readonly = "readonly", @class = " form-control" } })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.civilid, htmlAttributes: new { @class = "labelNormal  " })
                                @Html.EditorFor(model => model.civilid, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.passportno, htmlAttributes: new { @class = "labelNormal  " })
                                @Html.EditorFor(model => model.passportno, new { htmlAttributes = new { @readonly = "readonly", @class = " form-control" } })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.fullname, htmlAttributes: new { @class = "labelNormal " })
                                @Html.EditorFor(model => model.fullname, new { htmlAttributes = new { @readonly = "readonly", @class = " form-control" } })
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="btn-toolbar align-center">
                                    @{
                                        KAF.CustomHelper.HelperClasses.clsSecurityPanel objSecPanel = new KAF.CustomHelper.HelperClasses.clsSecurityPanel();
                                        if (objSecPanel.checkButtonPermission("HrPersonalInfo/HrPersonalInfoNew"))
                                        {
                                            <button type="submit" class="btn btn-primary btn-md btnNewHrPassportInfo" id="btnNewHrPassportInfo">
                                                <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> @KAF.MsgContainer._CommonHtml.add
                                            </button>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <table id="HrPassportInfoDt" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                        <tr>
                            <th>@KAF.MsgContainer._hr_passportinfo.passportno</th>
                            <th>@KAF.MsgContainer._hr_passportinfo.passportissuedate</th>
                            <th>@KAF.MsgContainer._hr_passportinfo.passportexpirydate</th>
                            <th style="width:250px;"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal-container-HrPassportInfoNew" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrPassportInfoNew">
        </div>
    </div>
</div>

<div id="modal-container-HrPassportInfoEdit" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrPassportInfoEdit">
        </div>
    </div>
</div>

<div id="modal-container-HrPassportInfoDetail" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrPassportInfoDetail">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrPassportInfo/LandingHrPassportInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrPassportInfo/NewHrPassportInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrPassportInfo/EditHrPassportInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrPassportInfo/DetailHrPassportInfo.js"></script>
    <script>
        var addlink = '@ViewBag.addlink';
    </script>
}
<script>

    $(document).ready(function () {
        $('.btnNewHrPassportInfo').hide();

        $('.btnClearHrPassportInfo').hide();
    });
</script>


