
@{
    ViewBag.Title = KAF.MsgContainer._hr_replacementinfo.replacementinfoList;
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
    PageData["baseUrl"] = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/');
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                @{
                    KAF.CustomHelper.HelperClasses.clsSecurityPanel objSecPanel = new KAF.CustomHelper.HelperClasses.clsSecurityPanel();

                    if (objSecPanel.checkButtonPermission("HrReplacementInfo/HrReplacementInfoNew"))
                    {
                        <button type="submit" class="btn btn-primary btn-md"  id="btnNewHrReplacementInfo">
                            <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> @KAF.MsgContainer._CommonHtml.add
                        </button>
                    }
                }
            </div>
            <div class="panel-body">
                <table id="HrReplacementInfoDt" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                        <tr>
                            <th>@KAF.MsgContainer._hr_replacementinfo.letterno</th>
                            <th>@KAF.MsgContainer._hr_replacementinfo.letterdate</th>
                            <th>Total Person</th>
                            <th>Status</th>
                            <th style="width:250px;"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal-container-HrReplacementInfoNew" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:70%!important">
        <div class="modal-content" id="mcHrReplacementInfoNew">
        </div>
    </div>
</div>

<div id="modal-container-HrReplacementInfoEdit" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:70%!important">
        <div class="modal-content" id="mcHrReplacementInfoEdit">
        </div>
    </div>
</div>

<div id="modal-container-HrReplacementInfoDetail" class="modal fade hidden-print reportmodal" role="dialog">
    <div class="modal-dialog" style="width:70%!important">
        <div class="modal-content" id="mcHrReplacementInfoDetail">
        </div>
    </div>
</div>

@section Scripts {
  
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrReplacementInfo/LandingHrReplacementInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrReplacementInfo/NewHrReplacementInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrReplacementInfo/EditHrReplacementInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrReplacementInfo/DetailHrReplacementInfo.js"></script>
    <script>
        var addlink = '@ViewBag.addlink';
    </script>
}



