                                        </span>
                                    </div>
                                    @Html.ValidationMessageFor(m => m.hr_familycivilidinfo.familycivilidissuedate, "", new { @class = "text-danger " })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.hr_familycivilidinfo.familycivilidexpirydate, htmlAttributes: new { @class = "labelNormal   " })
                                    <div class='input-group date dateonly' id='' style="width: 100 %; ">
                                        @Html.EditorFor(model => model.hr_familycivilidinfo.familycivilidexpirydate, new { htmlAttributes = new { @Value = Model.hr_familycivilidinfo != null && Model.hr_familycivilidinfo.familycivilidexpirydate != null ? Convert.ToDateTime(Model.hr_familycivilidinfo.familycivilidexpirydate).ToString("dd-MM-yyyy") : null, @class = "form-control", @type = "text" } })
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                    @Html.ValidationMessageFor(m => m.hr_familycivilidinfo.familycivilidexpirydate, "", new { @class = "text-danger " })
                                </div>
                            </div>
                        </div>
                    </fieldset>

                    <div class="btn-toolbar">
                        <button type="submit" id="btnSaveHrFamilyInfo" class="btn btn-primary btn-md btnSaveHrFamilyInfo"><i class="fa fa-save"> </i> @KAF.MsgContainer._Common._btnSave</button>
                        <button type="submit" id="btnModalCloseNew" class="btn btn-danger btn-md cancel"><i class="fa fa-arrow-circle-left"> </i> @KAF.MsgContainer._Common._btnCancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
