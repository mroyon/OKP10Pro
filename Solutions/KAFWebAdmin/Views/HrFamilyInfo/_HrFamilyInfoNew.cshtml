                                    <div class='input-group date dateonly' id='' style="width: 100 %; ">
                                        @Html.EditorFor(model => model.hr_familypassportinfo.familypassportissuedate, new { htmlAttributes = new { @Value = Model.hr_familypassportinfo != null && Model.hr_familypassportinfo.familypassportissuedate != null ? Convert.ToDateTime(Model.hr_familypassportinfo.familypassportissuedate).ToString("dd-MM-yyyy") : null, @class = "form-control", @type = "text" } })
