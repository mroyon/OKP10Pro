                                </div>
                            </div>
                        </div>
                    </fieldset>

                    <fieldset class="scheduler-border">
                        <legend class="scheduler-border">Civil Id Information</legend>
                        <div class="row ">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.hr_familycivilidinfo.familycivilidno, htmlAttributes: new { @class = "labelNormal required " })
                                    @Html.EditorFor(model => model.hr_familycivilidinfo.familycivilidno, new { htmlAttributes = new { @class = " form-control" } })
                                    @Html.ValidationMessageFor(model => model.hr_familycivilidinfo.familycivilidno, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.hr_familycivilidinfo.serialno, htmlAttributes: new { @class = "labelNormal  " })
                                    @Html.EditorFor(model => model.hr_familycivilidinfo.serialno, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.hr_familycivilidinfo.serialno, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.hr_familycivilidinfo.familycivilidissuedate, htmlAttributes: new { @class = "labelNormal   " })
                                    <div class='input-group date dateonly' id='' style="width: 100 %; ">
                                        @Html.EditorFor(model => model.hr_familycivilidinfo.familycivilidissuedate, new { htmlAttributes = new { @Value = Model.hr_familycivilidinfo != null && Model.hr_familycivilidinfo.familycivilidissuedate != null ? Convert.ToDateTime(Model.hr_familycivilidinfo.familycivilidissuedate).ToString("dd-MM-yyyy") : null, @class = "form-control", @type = "text" } })
